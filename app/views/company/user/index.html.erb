<div class="container">
  <div class="row">
    <div class="col-12 clearfix">
        <%= link_to "社員のアカウントを発行する",  new_user_registration_path, class:"btn btn-success" %>
    </div>
  </div>  

  <div class="row col-8">
    <h2>利用者一覧</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>User</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @user.each do |user| %>
        <tr>
          <td>
            <%= link_to company_user_show_path(user.id) do %>
              <%= user.name %>
            <% end %>
          </td>
          <td>
            <%= user.status %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="container calender_background">
  <table class= "table" >
    <h2>カレンダー</h2>
      <%= month_calendar events: @schedules do |date, schedules| %>
        <%= date.day %>
        <% schedules.each do |schedule| %>
          <div>
            <%= schedule.name %>
          </div>
        <% end %>
      <% end %>

  </table>
</div>
<div class="container">
  <div class="class">
    <h2>カレンダー</h2>
      <%= month_calendar events: @schedules do |date, schedules| %>
        <%= date.day %>
        <% schedules.each do |schedule| %>
          <div>
            <%= schedule.name %>
          </div>
        <% end %>
      <% end %>
      
  </div>
</div>
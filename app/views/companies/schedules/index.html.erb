<div class="container calender_background">
  <div id="test" style="padding-bottom: 10px;">
    <h2>カレンダー</h2>
      <%= month_calendar events: @schedules do |date, schedules| %>
        <%= date.day %>
        <% schedules.each do |schedule| %>
          <div>
            <!--どの利用者の詳細ページに遷移するかを（）内に定義する-->
            <%#= link_to schedule.employee_name, companies_employee_path(Employee.find_by(name: schedule.employee_name)) %>
            <a href="/companies/employees/<%= @employee.find_by(name: schedule.employee_name).id %>"
                data-toggle="tooltip" data-placement="right" title="<%= Schedule.tooltip(schedule.leave_stage) %>">
              <%= schedule.employee_name %>
            </a>
          </div>
        <% end %>
      <% end %>
  </div>
</div>

<script>
  $(function() {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>
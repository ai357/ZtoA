<div class="container">
  <h2 class="mt-3">お知らせ</h2>
  <div class="mt-5">
    <% @messages.each do |message| %>
      <div class="card mt-2">
        <div class="card-body">
          <p class="card-text"><%= message.message %></p>
          <footer class="h6 text-muted">
            <%= message.created_at.strftime('%Y/%m/%d') %>
          </footer>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= paginate @messages %>
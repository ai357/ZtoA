<div class="container">

  <h2 class="mb-5">利用者詳細</h2>

    <p id="notice"><%= notice %></p>

  <div class="mt-20, ml-10">
    <p>
      <strong>氏名<span class="ml-2 mr-2">:</span></strong>
      <%= @employee.name %>
    </p>

    <p>
      <strong>Email<span class="ml-2 mr-2">:</span></strong>
      <%= @employee.email %>
    </p>

    <p>
      <strong>出産予定日<span class="ml-2 mr-2">:</span></strong>
      <%= @employee.expected %>
    </p>

    <p>
      <strong>出産日<span class="ml-2 mr-2">:</span></strong>
      <%= @employee.birth %>
    </p>

    <p>
      <strong>出生児氏名<span class="ml-2 mr-2">:</span></strong>
      <%= @employee.baby_name %>
    </p>

    <p>
      <strong>ステータス<span class="ml-2 mr-2">:</span></strong>
      <%= link_to companies_employee_documents_path(@employee) do %>
        <%= @employee.status_i18n %>
      <% end %>
    </p>

    <div class="mt-5">
      <%= link_to '利用者一覧へ戻る', companies_employees_path, class: "ml-2" %>
      <span>|</span>
      <%= link_to '編集する', edit_companies_employee_path(@employee), class: "mr-2" %>
    </div>
  </div>

  <div class="row mt-5 ml-2">
    <%= link_to '退会', employees_unsubscribe_path, class: "btn btn-outline-danger" %>
  </div>

</div>
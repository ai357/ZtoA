<div class="container">
  <div class="row">
    <div class="offset-sm-3 col-sm-6">
      <h2>利用者新規登録</h2>

      <%= form_with(model: @employee, url: companies_employees_path) do |form| %>
        <%#= render 'form', form: form, submit: "新規利用者登録" %>

        <% if form.object.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(form.object.errors.count, "error") %> prohibited this employee from being saved:</h2>

            <ul>
              <% form.object.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :password %>
          <%= form.text_field :password, class: "form-control" %>
        </div>

        <div class="form-group text-center">
          <%= form.submit "登録する", class: "btn btn-outline-primary btn-block" %>
        </div>

        <% end %>

      <%= link_to '登録社員一覧', companies_employees_path %>

    </div>
  </div>
</div>
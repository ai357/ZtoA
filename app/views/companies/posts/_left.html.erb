<h2>User</h2>

  <div class="table table-hover table-inverse">
    <div class="row"></div>
    <div class="row">
      <div class="col-6 h5">name</div>
      <div class="col-6"><strong><%= @company.name %></strong></div>
    </div>
  </div>

<div>
  <h2 class="mt-3">New Post</h2>
  <%= form_with model: @post, url: companies_posts_path, method: :post do |f| %>
    <p class="title, mb-0">Title</p>
    <%= f.text_field :title, size: "32x1", class: "form-control" %>
    <p class="body, mb-0">Main</p>
    <%= f.text_area :body, size: "35x5", class: "form-control" %>
    <div class="row mt-2">
      <div class="col-12 col-md-6 mx-auto">
        <%= f.submit '投稿', class: 'btn btn-outline-success btn-block' %>
      </div>
    </div>  
    <!--<p><button type="submit" class="btn btn-success">投稿</button></p>-->
  <% end %>
</div>

<div>
  <h2 class="mt-5">Search</h2>
  <div class="serch_form">
    <%= form_with url: companies_posts_path, method: :get, local: true do |f| %>
      <%= f.text_field :name, placeholder: "名前" %>
      <%= f.submit'検索' %>
    <% end %>
  </div>
</div>
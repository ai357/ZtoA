<h2>User</h2>

  <table class="table table-hover table-inverse">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @company.name %></th>
      </tr>
    </tbody>
  </table>


<h2 class="mt-3">New Post</h2>
<%= form_with model: @post, url: companies_posts_path, method: :post do |f| %>
  <p class="title">Title</p>
  <%= f.text_field :title %>
  <p class="body">Main</p>
  <%= f.text_area :body %>
  <p><button type="submit" class="btn btn-success">投稿</button></p>
<% end %>


<h2 class="mt-3">Search</h2>
<div class="serch_form">
  <%= form_with url: companies_posts_path, method: :get, local: true do |f| %>
    <%= f.text_field :name %>
    <%= f.submit'検索' %>
  <% end %>
</div>
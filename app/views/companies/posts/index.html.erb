<div class="container px-5 px-sm-0">

  <% if @post.errors.any? %>
    <%= @post.errors.count %>errors prohibited this obj from being saved:
    <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>

  <div class="row">
    <div class="col-md-3">
      <%= render 'companies/posts/left', user: @company %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Posts</h2>

        <div class="">
          <% @posts.each do |post| %>
            <div>
              <%= post.title %>
            </div>
            <div>
              <%= link_to companies_post_path(post.id) do %>
                <%= post.body %>
              <% end %>
            </div>
          <% end %>
          <%= @company.name %>
        </div>

    </div>
  </div>
</div>

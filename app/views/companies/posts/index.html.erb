<div class="container px-5 px-sm-0">

  <% if @post.errors.any? %>
    <%= @post.errors.count %>errors prohibited this obj from being saved:
    <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>

  <div class="row">
    <div class="col-md-3">
      <%= render 'companies/posts/left', user: @company %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Posts</h2>

          <% @posts.each do |post| %>
            <div class="card mb-2">
              <%= link_to companies_post_path(post.id) do %>
                <div class="card-header">
                  <%= post.title %>
                </div>
              <% end %>
              <div class="card-body">
                <blockquote class="blockquote mb-0">
                  <p><%= post.body %></p>
                  <footer class="blockquote-footer"><%= post.created_at %> <cite title="Source Title"><% post.company.name %></cite></footer>
                </blockquote>
              </div>
            </div>
          <% end %>











    </div>
  </div>
</div>

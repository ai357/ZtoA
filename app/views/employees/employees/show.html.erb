<div class="container">
  <h2>My Page</h2>
  <div class="row">
    <div class="col-md-6">
      <strong>氏名<span class="ml-2 mr-2">:</span></strong>
      <%= @employee.name %>
    </div>
    <div class="col-md-6 mt-2 mt-md-0">

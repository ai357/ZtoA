<h2>User</h2>

  <div class="table table-hover table-inverse">
    <div class="row"></div>
    <div class="row">
      <div class="col-6 h5">name</div>
      <div class="col-6"><strong><%= @employee.name %></strong></div>
    </div>
  </div>

<div>
  <h2 class="mt-3">New Post</h2>
  <%= form_with model: @post, url: employees_posts_path, method: :post do |f| %>
    <p class="title, mb-0">Title</p>
    <%= f.text_field :title, size: "32x1", class: 'form-control' %>
    <p class="body, mb-0">Main</p>
    <%= f.text_area :body, size: "35x5", class: 'form-control' %>
    <p><button type="submit" class="btn btn-outline-success btn-block">投稿</button></p>
  <% end %>
</div>

<div>
  <h2 class="mt-5">Search</h2>
  <div class="serch_form">
    <%= form_with url: employees_posts_path, method: :get, local: true do |f| %>
      <%= f.text_field :name, placeholder: "名前" %>
      <%= f.submit'検索' %>
    <% end %>
  </div>
</div>